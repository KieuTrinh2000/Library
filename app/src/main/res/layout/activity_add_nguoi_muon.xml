<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAccount"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/add_sv" />

            <TextView
                android:id="@+id/tvThemSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:fontFamily="@font/abeezee"
                android:layout_marginTop="10dp"
                android:text="THÊM SINH VIÊN"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMaSV"
                android:background="@drawable/custom_shape_edittext"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Mã sinh viên"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/etTenSV"
                android:background="@drawable/custom_shape_edittext"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Tên sinh viên"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/etLop"
                android:background="@drawable/custom_shape_edittext"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Lớp hành chính"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etSDT"
                android:background="@drawable/custom_shape_edittext"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="SĐT"
                android:inputType="phone" />

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnThemSV"
                    android:text="Thêm"

                    android:background="#FBF199"
                    android:layout_width="120dp"
                    android:layout_height="50dp"/>
                <Button
                    android:id="@+id/btnHuySV"
                    android:text="Huỷ"
                    android:layout_marginLeft="45dp"
                    android:background="#FBF199"
                    android:layout_width="120dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>