<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="320dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="320dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/closeSach"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_gravity="end"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView

                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:fontFamily="@font/abeezee"
                android:padding="10dp"
                android:text="Thông tin sách"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvMaS1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Mã sách:" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvMaS2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTenS1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Tên sách:"
                    android:padding="16dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTenS2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTacGia1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Tác giả:"
                    android:padding="16dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTacGia2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvViTri1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Vị trí:"
                    android:padding="16dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvViTri2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvSoLuong1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Số lượng:"
                    android:padding="16dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvSoLuong2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvNamXB1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Năm Sx:"
                    android:padding="16dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvNamXB2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTinhTrang1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Tình trạng:"
                    android:padding="16dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTinhTrang2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
                <Button
                    android:id="@+id/btnThoat"
                    android:text="Thoát"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="end"
                    android:background="#FBF199"
                    android:layout_width="120dp"
                    android:layout_height="50dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>